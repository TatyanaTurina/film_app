= form_for @film, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name_f, :class => 'control-label'
    .controls
      = f.text_field :name_f, :class => 'text_field'
  .control-group
    = f.label :info, :class => 'control-label'
    .controls
      = f.text_field :info, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), films_path, :class => 'btn'
