= form_for(@film) do |f| 
  - if @film.errors.any?
    #error_explanation
      %h2
        = pluralize(@film.errors.count, "error")
        prohibited this film from being saved:
      %ul
        - @film.errors.full_messages.each do |msg| 
          %li = msg 
      
  .field
    = f.label :name_f 
    %br/
    = f.text_field :name_f
  .field
    = f.label :info 
    %br/
    = f.text_field :info 
  .actions
    = f.submit
 
