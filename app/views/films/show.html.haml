- model_class = Film
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name_f) + ':'
  %br
  = @film.name_f
%p
  %strong= model_class.human_attribute_name(:info) + ':'
  %br
  = @film.info
%h2
  Comments
  - @film.comments.each do |comment|
    %p
      %strong User name:
      = comment.name
    %p
      =l comment.created_at
    %p
      %strong Comment:
      = comment.message

%h2
  Add a comment:
  = render partial: "comments/form", locals:{film: @film}
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), films_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_film_path(@film), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), film_path(@film), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
