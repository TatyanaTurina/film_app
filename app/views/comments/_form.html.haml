= form_for Comment.new, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :message, :class => 'control-label'
    .controls
      = f.text_field :message, :class => 'text_field'
  
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  
  .control-group
    = f.label :name_f, :class => 'control-label'
    .controls
      = f.text_field :name_f, :class => 'text_field'

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), comments_path, :class => 'btn'
