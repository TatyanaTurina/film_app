%p
  %strong Email:
  = @user.email 


%p
  %strong Parol:
  = @user.parol

%h2
  Comments
  - @user.comments.each do |comment|
    %p
      %strong Name:
      = comment.name
    %p
      %strong Comment:
      = comment.message

  %h2
  Add a comment:
  = form_for([@user, @user.comments.build]) do |f|
  %p
    = f.label :name 
    %br/
    = f.text_field :name

  %p
    = f.label :message 
    %br/
    = f.text_area :message 
  %p
    = f.submit 

= link_to 'Edit', edit_user_path(@user)  |
= link_to 'Back', users_path 

